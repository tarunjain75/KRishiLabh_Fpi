<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00bcd4"
    android:weightSum="6">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="4.5"
        android:elevation="10dp"
        app:cardCornerRadius="6dp"
        android:layout_centerInParent="true"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Enter Details"
                android:textColor="@android:color/holo_orange_dark"

                android:textSize="27dp"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_ItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/input_ItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_shopping_cart"
                    android:drawablePadding="10dp"
                    android:hint="@string/NameOfItem"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_ItemQuantity"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/input_ItemQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_add_shopping_cart"
                        android:drawablePadding="10dp"
                        android:hint="@string/QuantityAvailable"
                        android:inputType="number"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textStyle="bold" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_Unit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/input_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="unit"

                    android:textColorHint="#05ab9a"
                  />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_ItemRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/input_ItemRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/currency"
                    android:drawablePadding="10dp"
                    android:hint="@string/RateOfItem"
                    android:inputType="number"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/input_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_button"
                android:elevation="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Update"
                android:textSize="20dp" />
        </LinearLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>